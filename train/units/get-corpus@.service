[Unit]
Description=Download corpus %i

[Service]
WorkingDirectory=/tmp/4dahmen/workbench
EnvironmentFile=/data/4dahmen/config/environ
EnvironmentFile=/data/4dahmen/config/%i/environ
StandardError=file:/data/4dahmen/log
StandardOutput=file:/data/4dahmen/log
ExecStart=/tmp/4dahmen/run/bin/get-corpora.sh "%i"
Restart=always
Type=oneshot

